<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c2c2c2"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
  
    tools:context=".ShockActivity" >
    
<LinearLayout
    android:id="@+id/layoer72"
    android:layout_width="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content"
  android:orientation="vertical" >
    <TextView
            android:id="@+id/textDrug"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:gravity="center"
            android:background="#ff0099cc"
            android:text="Drug"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />
    
    
</LinearLayout>

<LinearLayout
    android:id="@+id/layoer2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="40dp"
    android:weightSum="100"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/editText1"
        android:hint="weight"
        android:textColor="@android:color/black"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>
   <EditText
        android:id="@+id/editText2"
        android:textColor="@android:color/black"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Age"
        android:ems="10"
        android:inputType="number" >

    </EditText>

   <Spinner
       android:id="@+id/spinner1"
       android:prompt="@string/lang"
       android:entries="@array/age_category"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_weight="1" />
   
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoer3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoer2"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoer1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="100" >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Calculate"
                android:textColor="@color/text_color_primary_3"
                android:backgroundTint="@color/holo_blue_dark"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="clear"
                android:textColor="@color/text_color_primary_3"
                android:backgroundTint="@color/holo_blue_dark"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textResults"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layoer1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="#fecd64"
            android:lines="5"
            android:text="Results"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignRight="@+id/layoer1"
            android:layout_below="@+id/layoer1"
            android:layout_marginTop="12dp"
            android:layout_weight="10" />
    </LinearLayout>

</RelativeLayout>
