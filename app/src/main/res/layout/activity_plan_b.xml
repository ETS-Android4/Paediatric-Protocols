<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c2c2c2"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShockActivity" >


    <LinearLayout
        android:id="@+id/layoer72"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textDrug"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="#ff0099cc"
            android:text="Dehydration Plan B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="Input weight"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="40dp"
        android:layout_below="@id/layoer72"
        >

        <requestFocus />
    </EditText>
    <LinearLayout
        android:id="@+id/layoer1"

        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/weight"
        android:weightSum="100"
        android:orientation="horizontal"

        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Calculate"
            android:textColor="@color/text_color_primary_3"
            android:backgroundTint="@color/holo_blue_dark"
            android:background="@color/holo_blue_dark"
            android:layout_marginRight="2dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="clear"
            android:textColor="@color/text_color_primary_3"
            android:backgroundTint="@color/holo_blue_dark"
            android:background="@color/holo_blue_dark"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoer3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layoer1"
        android:weightSum="100"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/textResults"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layoer1"

            android:lines="3"
            android:background="#fff79a"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="186dp" />

    </LinearLayout>
</RelativeLayout>